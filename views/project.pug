extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= templateData.project_name
        p.lead.text-light
          | #{templateData.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each technology in templateData.technologies
            li= technology

        a.button.expanded.button_slide.slide_right(href=`${templateData.live_link}`) Live Demo
        if templateData.github_link !== "none"
          a.button.expanded.button_slide.slide_right(href=`${templateData.github_link}`) GitHub Repo
    
    //- each image in templateData.image_urls
      img.image(src=`${image}`)
    .split-card-container.js_split_card_container
      .split-card
        img(src=`${templateData.image_urls[0]}`, class="cards card-1 image")
        img(src=`${templateData.image_urls[1]}`, class="cards card-2 image")
        img(src=`${templateData.image_urls[2]}`, class="cards card-3 image")
    