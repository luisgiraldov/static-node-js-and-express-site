extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Look What I have Done!
      p.lead.text-light
        | This project is to showcase some of my previous work, and at the same time to get some practice using Node JS and Express, Welcome!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell.flip-card
          .flip-card-inner
            .front
              a(href=`/projects/${project.id}`, class="full-size")
                img.thumbnail(src=`${project.image_urls[0]}`)
            .back
              a(href=`/projects/${project.id}`, class="full-size")
                img.thumbnail(src=`${project.image_urls[1]}`)
                
          h5= project.project_name
      
